@article{Burgess2017323,
title = "Examining the role of individual movement in promoting coexistence in a spatially explicit prisoner's dilemma ",
journal = "Journal of Theoretical Biology ",
volume = "419",
number = "",
pages = "323 - 332",
year = "2017",
note = "",
